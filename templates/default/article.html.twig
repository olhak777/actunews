{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-18 mx-auto">
                <div class="jumbotron mt-4">
                    <h1 class="display-4">{{ post.title }}</h1>
                    <img src="{{ asset('uploads/images/' ~ post.featuredImage) }}"
                         alt="{{ post.title }}" class="card-img-top">
                    {{ post.content | raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}