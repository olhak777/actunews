{% extends "base.html.twig" %}

{% block body %}
    {# {{  dump(app.request) }} #}
    {# {{  dump(app.request.get('alias')) }} #}
    <!--.p-3.mx-auto.text-center>h1.display-4{ActuNews} -->
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ app.request.get('alias') | title }}</h1>
    </div>

    <!-- .py-5.bg-light>.container>.row>.col-md-4.mt-4 -->
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">


                {% for post in posts %}

                    <div class="col-md-4 mt-4">
                        <div class="card shadow-sm">
                            <img src="{{ asset('uploads/images/' ~ post.featuredImage) }}"
                                 alt="{{ post.title }}" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>

                                <a href="{{ path('default_article', {
                                    'category' : post.category.alias,
                                    'alias' : post.alias,
                                    'id' : post.id
                                }) }}" class="btn btn-primary">Lire l'article</a>
                            </div><!--/.card-body -->
                        </div><!--/.card -->
                    </div><!--/.col-md-4 -->

                {% endfor %}

            </div><!--/.row -->
        </div><!--/.container -->
    </div><!--/.py-5 -->

{% endblock %}


